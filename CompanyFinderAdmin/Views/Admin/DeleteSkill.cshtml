@model DatabaseLibrary.Models.SkillSet

<div class="standardBackground allPagesBackground">
    <div class="container">
        @if (TempData["deleteSkillMessage"] != null)
        {
            <div class="container">
                <div class="alert alert-success alert-dismissable text-center">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    @TempData["deleteSkillMessage"]
                </div>
            </div>

        }
        <div class="card">
            <h4 class="card-header text-center">Are you sure you want to delete this skill?</h4>
            <div class="card-block">
                <div>
                    <dl class="dl-horizontal">
                        <dd class="text-center">
                            @Html.DisplayFor(model => model.SkillName)
                        </dd>
                    </dl>
                    <br />
                    <div class="text-center">
                        <form asp-action="DeleteSkill">
                            <input type="hidden" asp-for="SkillId" />
                            <input type="submit" value="Delete" class="btn btn-primary btn-raise" />
                            <a asp-action="IndexSkillsDetailsFocus" class="btn btn-danger btn-raise">Go Back</a>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>


</div>
